<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity PostComment.
    -->
    <changeSet id="20150914062622" author="jhipster">
        <createTable tableName="POSTCOMMENT">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="varchar(255)"/>
            <column name="create_date" type="timestamp"/>
            <column name="type" type="varchar(255)"/>
            <column name="jid" type="varchar(255)"/>
            <column name="userpost_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="POSTCOMMENT" columnName="create_date" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="userpost_id"
                                 baseTableName="POSTCOMMENT"
                                 constraintName="fk_postcomment_userpost_id"
                                 referencedColumnNames="id"
                                 referencedTableName="USERPOST"/>

    </changeSet>
</databaseChangeLog>
